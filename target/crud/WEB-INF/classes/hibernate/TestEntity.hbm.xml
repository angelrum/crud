<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="system.model.TestEntity" table="test" schema="test">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="author">
            <column name="author" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="isbn">
            <column name="isbn" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="printYear">
            <column name="printYear" sql-type="int(11)"/>
        </property>
        <property name="readAlready">
            <column name="readAlready" sql-type="tinyint(1)"/>
        </property>
    </class>
</hibernate-mapping>